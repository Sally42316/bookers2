<%= render 'layouts/user_left' %>



<div class='col-md-8 offset-md-1'>
<h2>Books</h2>
<table class="table table-hover table-inverse">
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <thead>
        <% @books.each do |book| %>
        <tr>
        <td>
        <% if book.user.image.attached? %>
          <%= image_tag book.user.image, size: "100x100" %>
        <% else %>
          <%= image_tag 'default-image', size: "100x100" %>
        <% end %>
      </td>
            <td><%= link_to book.title, book_path(book) %></td>
            <td><%= book.body %></td>
        </tr>
        <% end %>
    </thead>
  </tbody>
  
</table>