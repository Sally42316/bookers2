<p id="notice"></p>
<div class='container'>




	<div class='row'>
	  <div class='col-md-3'>


  




      <h2>User info</h2>
      <table class='table'>
        <tr>
          <% if user.image.attached? %>
            <%= image_tag user.image, size: "100x100" %>
          <% else %>
            <%= image_tag 'default-image', size: "100x100" %>
          <% end %>
        </tr>
        <tr>
          <td><p>name</p></td>
          <td><%= user.name %></td>
        </tr>
        <tr>
          <td><p>introduction</p></td>
          <td><%= user.introduction %></td>
        </tr>
      </table>
      
      <div class="row">
      <%= link_to (current_user == user) ? edit_user_path(user) : current_user, class: "btn btn-block btn-li btn-outline-dark" do %>
          <i class="fa-solid fa-user-gear"></i>
        <% end %>
      
      </div>








  <h1>New book</h1>

  <%= form_with model: book do |f| %>
    <h4>Title</h4>
    <%= f.text_field :title, class: "col-lg-12" %>
      
    <h4>Opinion</h4>
    <%= f.text_area :body, class: "col-lg-12" %>
      
    <%= f.submit 'Create Book', class: "btn btn-success" %>
  <% end %>



</div>
