<div class='container px-5 px-sm-0'>
	<div class='row'>
	  <div class='col-md-3'>

   

<h1>Users#show</h1>
<p>Find me in app/views/users/show.html.erb</p>

<div>
  <% if flash[:notice] %>
    <%= flash[:notice] %>
    # ユーザー情報更新
  <% end %>
</div>

<div>
  <% if flash[:success] && flash[:success] != flash[:notice] %>
    <%= flash[:success] %>
    # ログインの成功
  <% end %>
</div>

  
<h2>User info</h2>
<table class='table'>
<tr>
<% if @user.image.attached? %>
    <%= image_tag @user.image, size: "100x100" %>
  <% else %>
    <%= image_tag 'default-image', size: "100x100" %>
  <% end %>
</tr>
<tr>
  <td><p>name</p></td>
  <td><%= @user.name %></td>
</tr>
<tr>
  <td><p>introduction</p></td>
  <td><%= @user.introduction %></td>
</tr>
</table>

<div class="row">
<%= link_to (current_user == @user) ? edit_user_path(@user) : current_user, class: "btn btn-block btn-li btn-outline-dark" do %>
  <i class="fa-solid fa-user-gear"></i>
<% end %>

  </div>







  <h1>New book</h1>
<!-- form_with部分 -->
<%= form_with model: @book_new do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
	
  <h4>Opinion</h4>
  <%= f.text_area :body %>
	
  <%= f.submit 'Create Book', class: "btn btn-success" %>
<% end %>



</div>






<div class='col-md-8 offset-md-1'>
<h2>Books</h2>
<% @books.each do |book| %>
<table class='table table-hover table-inverse'>
<tbody>
  <tr>
    <td>
    <% if @user.image.attached? %>
    <%= image_tag @user.image, size: "100x100" %>
  <% else %>
    <%= image_tag 'default-image', size: "100x100" %>
  <% end %>
    </td>

    <td><%= link_to book.title, book_path(book.id) %></td>
    <td><%= book.body %></td>
    <td colspan="3"></td>
    
  </tr>
  
</tbody>
</table>
<% end %>


</div>
</div>
