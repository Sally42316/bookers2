<main>
<p id="notice"></p>
<div class="container">
<div class="row">

    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">

    <% if @user.errors.any? %>
<%= @user.errors.count %>件のエラーが発生しました
<ul>
  <% @user.errors.full_messages.each do |message| %>
    <li>
    <%= message %>
    </li>
  <% end %>
</ul>
<% end %>


<h2>User info</h2>
<p>Find me in app/views/users/edit.html.erb</p>

<%= form_with model: @user do |f| %>

<div class="form-group">
<label for="user_name">Name</label>
<%= f.text_field :name, class: "col-lg-12" %>
</div>

<div class="form-group">
<label for="user_image">Image</label>
<br>
<%= f.file_field :image, class: "form-control-file user_image" %>
</div>
  
<div class="form-group">
<label for="user_introduction">Introduction</label>
<%= f.text_area :introduction, class: "col-lg-12" %>
</div>

<div class="form-group">
<%= f.submit 'Update User', class: "btn btn-secondary" %>
</div>

<% end %>
</div>
</div>
</div>
</main>
