


<%= render 'layouts/user_left', book:@book, user:@user %>
  




<div class='col-md-8 offset-md-1'>
  <h2>ログイン直後Books users/show.html</h2>
  <table class="table table-hover table-inverse">
    <thead>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
    <% @books.each do |book| %>
      <tr>
      
        <td>
          <% if @user.image.attached? %>
            <%= image_tag @user.image, size: "100x100" %>
          <% else %>
            <%= image_tag 'default-image', size: "100x100" %>
          <% end %>
        </td>
        <td><%= link_to book.title, book_path(book.id) %></td>
        <td><%= book.body %></td>
        <td colspan="3"></td>
      <% end %>
      </tr>
    </tbody>
  </table>
</div>

