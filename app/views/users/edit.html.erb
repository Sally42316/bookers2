<main>
        <p id="notice"></p>
        <div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
<h1>User info</h1>
<p>Find me in app/views/users/edit.html.erb</p>

<div class="form-group">
<%= form_with model: @user do |f| %>

  <label for="user_name">Name</label>
  <%= f.text_field :name, class: "col-lg-12" %>
  </div>

  <div class="form-group">
    <label for="user_image">Image</label>
    <br>
  <%= f.file_field :image %>
  </div>
  
  <div class="form-group">
    <label for="user_introduction">Introduction</label>
  <%= f.text_area :introduction, class: "col-lg-12" %>
  </div>

  <%= f.submit 'Update User', class: "btn btn-secondary" %>
  
<% end %>
</div>
</div>
</div>
</main>
